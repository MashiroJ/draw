<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mashiro.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.mashiro.entity.Role">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,description,
        status,create_time,update_time,
        is_deleted
    </sql>
    <insert id="grantRole">
        insert into sys_user_role(user_id , role_id)values ( #{userId} , #{roleId})
    </insert>
    <insert id="grantRoleByid">
        insert into sys_user_role(user_id , role_id)values ( #{userId} , #{roleId})
    </insert>

    <delete id="deleteByUserId">
        delete from sys_user_role sur where sur.user_id = #{userId}
    </delete>
    <delete id="removeRole">
            delete from sys_user_role sur where sur.user_id = #{userId} and sur.role_id = #{roleId}
    </delete>
    <select id="getRoleByUserId" resultType="java.lang.Long">
        SELECT r.id, r.name FROM sys_user_role ur JOIN sys_role r ON ur.role_id = r.id WHERE ur.user_id = #{userId};
    </select>

</mapper>